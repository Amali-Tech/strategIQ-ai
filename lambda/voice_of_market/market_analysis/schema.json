{
  "openapi": "3.0.0",
  "info": {
    "title": "Voice of the Market Agent - Market Analysis API",
    "version": "1.0.0",
    "description": "API for comprehensive market analysis including trends, competitive landscape, and consumer insights"
  },
  "paths": {
    "/analyze-market-trends": {
      "post": {
        "summary": "Analyze market trends and competitive landscape",
        "description": "Provides comprehensive market analysis including market size, growth trends, competitive landscape, consumer insights, and strategic opportunities",
        "operationId": "analyze_market_trends",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "market_parameters": {
                    "type": "object",
                    "properties": {
                      "industry": {
                        "type": "string",
                        "description": "Target industry or market vertical"
                      },
                      "geographic_scope": {
                        "type": "string",
                        "enum": ["global", "regional", "national", "local"],
                        "description": "Geographic scope of analysis"
                      },
                      "target_regions": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "description": "Specific regions or countries to analyze"
                      },
                      "time_horizon": {
                        "type": "string",
                        "enum": [
                          "current",
                          "6_months",
                          "1_year",
                          "3_years",
                          "5_years"
                        ],
                        "description": "Time horizon for trend analysis"
                      }
                    },
                    "required": ["industry", "geographic_scope"]
                  },
                  "analysis_focus": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": [
                        "market_size",
                        "growth_trends",
                        "competitive_analysis",
                        "consumer_behavior",
                        "technology_trends",
                        "regulatory_environment",
                        "economic_factors"
                      ]
                    },
                    "description": "Specific areas to focus the analysis on"
                  },
                  "company_context": {
                    "type": "object",
                    "properties": {
                      "company_size": {
                        "type": "string",
                        "enum": [
                          "startup",
                          "small",
                          "medium",
                          "large",
                          "enterprise"
                        ],
                        "description": "Company size for contextual analysis"
                      },
                      "current_market_position": {
                        "type": "string",
                        "enum": [
                          "market_leader",
                          "challenger",
                          "follower",
                          "niche_player",
                          "new_entrant"
                        ],
                        "description": "Current market position"
                      },
                      "product_category": {
                        "type": "string",
                        "description": "Product or service category"
                      },
                      "target_segments": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "description": "Target customer segments"
                      }
                    }
                  },
                  "data_sources": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": [
                        "industry_reports",
                        "social_media",
                        "news_analysis",
                        "competitor_websites",
                        "patent_filings",
                        "financial_reports",
                        "survey_data"
                      ]
                    },
                    "description": "Preferred data sources for analysis"
                  }
                },
                "required": ["market_parameters"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Market analysis completed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"]
                    },
                    "market_analysis": {
                      "type": "object",
                      "properties": {
                        "market_overview": {
                          "type": "object",
                          "properties": {
                            "market_size": {
                              "type": "string",
                              "description": "Current market size"
                            },
                            "growth_rate": {
                              "type": "string",
                              "description": "Annual growth rate"
                            },
                            "market_maturity": {
                              "type": "string",
                              "enum": [
                                "emerging",
                                "growth_stage",
                                "mature",
                                "declining"
                              ],
                              "description": "Market maturity stage"
                            },
                            "key_drivers": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              },
                              "description": "Key market growth drivers"
                            }
                          }
                        },
                        "competitive_landscape": {
                          "type": "object",
                          "properties": {
                            "market_concentration": {
                              "type": "string",
                              "enum": [
                                "highly_concentrated",
                                "moderately_concentrated",
                                "fragmented"
                              ],
                              "description": "Level of market concentration"
                            },
                            "top_competitors": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "name": {
                                    "type": "string"
                                  },
                                  "market_share": {
                                    "type": "string"
                                  },
                                  "strengths": {
                                    "type": "array",
                                    "items": {
                                      "type": "string"
                                    }
                                  },
                                  "weaknesses": {
                                    "type": "array",
                                    "items": {
                                      "type": "string"
                                    }
                                  }
                                }
                              },
                              "description": "Top competitors analysis"
                            },
                            "competitive_intensity": {
                              "type": "string",
                              "enum": ["low", "moderate", "high", "very_high"],
                              "description": "Level of competitive intensity"
                            },
                            "barriers_to_entry": {
                              "type": "string",
                              "enum": ["low", "moderate", "high", "very_high"],
                              "description": "Barriers to market entry"
                            }
                          }
                        },
                        "consumer_insights": {
                          "type": "object",
                          "properties": {
                            "primary_segments": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "segment": {
                                    "type": "string"
                                  },
                                  "size": {
                                    "type": "string"
                                  },
                                  "characteristics": {
                                    "type": "array",
                                    "items": {
                                      "type": "string"
                                    }
                                  },
                                  "pain_points": {
                                    "type": "array",
                                    "items": {
                                      "type": "string"
                                    }
                                  },
                                  "preferences": {
                                    "type": "array",
                                    "items": {
                                      "type": "string"
                                    }
                                  }
                                }
                              },
                              "description": "Primary customer segments"
                            },
                            "buying_behavior": {
                              "type": "object",
                              "properties": {
                                "decision_timeline": {
                                  "type": "string",
                                  "description": "Typical purchase decision timeline"
                                },
                                "key_influencers": {
                                  "type": "array",
                                  "items": {
                                    "type": "string"
                                  },
                                  "description": "Key purchase influencers"
                                },
                                "purchase_channels": {
                                  "type": "array",
                                  "items": {
                                    "type": "string"
                                  },
                                  "description": "Preferred purchase channels"
                                }
                              }
                            }
                          }
                        },
                        "market_trends": {
                          "type": "object",
                          "properties": {
                            "emerging_trends": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "trend": {
                                    "type": "string"
                                  },
                                  "impact": {
                                    "type": "string",
                                    "enum": [
                                      "low",
                                      "medium",
                                      "high",
                                      "very_high"
                                    ]
                                  },
                                  "timeline": {
                                    "type": "string"
                                  },
                                  "description": {
                                    "type": "string"
                                  }
                                }
                              },
                              "description": "Emerging market trends"
                            },
                            "declining_trends": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              },
                              "description": "Declining market trends"
                            }
                          }
                        },
                        "opportunities": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "description": "Identified market opportunities"
                        },
                        "threats": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "description": "Identified market threats"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
