{
  "openapi": "3.0.0",
  "info": {
    "title": "Data Enrichment Action Group",
    "version": "1.0.0",
    "description": "This API enriches product and market data for marketing campaign generation using sources like YouTube and News APIs."
  },
  "paths": {
    "/enrich": {
      "post": {
        "operationId": "enrichData",
        "summary": "Fetch enriched data for a given product and target markets",
        "description": "Takes a product, target markets, and campaign objectives to retrieve relevant market insights, trends, and competitor data from various data sources such as YouTube, news, and social platforms.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["query"],
                "properties": {
                  "query": {
                    "type": "string",
                    "description": "The search query to enrich (e.g., product name, keyword, or brand)."
                  },
                  "product": {
                    "type": "string",
                    "description": "The name of the product being enriched."
                  },
                  "target_markets": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "List of target markets or regions for the campaign."
                  },
                  "campaign_objectives": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "List of campaign goals such as awareness, engagement, or conversion."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful data enrichment response.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "enriched_data": {
                      "type": "object",
                      "properties": {
                        "youtube": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "title": { "type": "string" },
                              "url": { "type": "string" },
                              "views": { "type": "integer" },
                              "channel": { "type": "string" },
                              "published_at": {
                                "type": "string",
                                "format": "date-time"
                              }
                            }
                          },
                          "description": "List of relevant YouTube videos related to the product or topic."
                        },
                        "news": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "headline": { "type": "string" },
                              "source": { "type": "string" },
                              "url": { "type": "string" },
                              "published_at": {
                                "type": "string",
                                "format": "date-time"
                              }
                            }
                          },
                          "description": "Recent news articles related to the query or market."
                        },
                        "market_insights": {
                          "type": "object",
                          "properties": {
                            "top_trends": {
                              "type": "array",
                              "items": { "type": "string" }
                            },
                            "sentiment_summary": { "type": "string" }
                          },
                          "description": "Aggregated insights, including trending topics and sentiment."
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request. Missing or invalid parameters."
          },
          "500": {
            "description": "Internal server error while fetching enrichment data."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}
