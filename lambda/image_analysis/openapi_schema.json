{
  "openapi": "3.0.0",
  "info": {
    "title": "Image Analysis API",
    "description": "Performs image analysis using Amazon Rekognition to detect labels, objects, and generate marketing insights. Results are stored in DynamoDB with analysis_status='image_analyzed'. Compatible with Amazon Bedrock Agent Action Groups.",
    "version": "3.0.0"
  },
  "paths": {
    "/analyze-product-image": {
      "post": {
        "summary": "Analyze product image and generate marketing insights",
        "description": "Uses Amazon Rekognition to analyze product images from S3, extract top detected labels, and store structured results in DynamoDB with analysis_status='image_analyzed'. Returns product_id and analysis details for use in subsequent enrichment steps.",
        "operationId": "analyze_product_image",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "product_info": {
                    "type": "object",
                    "description": "JSON object containing product details",
                    "properties": {
                      "name": {
                        "type": "string",
                        "example": "Bose QuietComfort 45 Headphones"
                      },
                      "description": {
                        "type": "string",
                        "example": "Wireless noise-cancelling headphones with superior sound quality."
                      },
                      "category": {
                        "type": "string",
                        "example": "Electronics"
                      }
                    },
                    "required": ["name"]
                  },
                  "s3_info": {
                    "type": "object",
                    "description": "JSON object specifying the S3 image location",
                    "properties": {
                      "bucket": {
                        "type": "string",
                        "example": "marketing-assets-sandbox"
                      },
                      "key": {
                        "type": "string",
                        "example": "product-images/bose-qc45.png"
                      }
                    },
                    "required": ["key"]
                  }
                },
                "required": ["product_info", "s3_info"]
              },
              "example": {
                "product_info": {
                  "name": "Bose QuietComfort 45 Headphones",
                  "description": "Wireless noise-cancelling headphones with world-class sound.",
                  "category": "Electronics"
                },
                "s3_info": {
                  "bucket": "marketing-assets-sandbox",
                  "key": "product-images/bose-qc45.png"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Image analysis completed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "product_id": {
                      "type": "string",
                      "description": "Unique identifier for the analyzed product (UUID)",
                      "example": "a1b2c3d4-e5f6-7890-ab12-cd34ef56gh78"
                    },
                    "product_name": {
                      "type": "string",
                      "example": "Bose QuietComfort 45 Headphones"
                    },
                    "detected_labels": {
                      "type": "array",
                      "description": "Top 10 detected labels with confidence and categories",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string",
                            "example": "Headphones"
                          },
                          "confidence": {
                            "type": "number",
                            "example": 98.74
                          },
                          "categories": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            },
                            "example": ["Electronics", "Audio"]
                          },
                          "instances": {
                            "type": "integer",
                            "example": 1
                          }
                        }
                      }
                    },
                    "analysis_status": {
                      "type": "string",
                      "example": "image_analyzed"
                    },
                    "timestamp": {
                      "type": "string",
                      "example": "2025-10-18T13:30:00Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input or image not found in S3",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "Image not found in S3: s3://marketing-assets-sandbox/product-images/bose-qc45.png"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "Internal error: Rekognition analysis failed"
                    }
                  }
                }
              }
            }
          }
        },
        "x-amazon-bedrock-integration": {
          "actionGroup": "image-analysis",
          "function": "analyze_product_image",
          "apiType": "REST",
          "httpMethod": "POST"
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}
