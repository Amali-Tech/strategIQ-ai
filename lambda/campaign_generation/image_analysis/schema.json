{
  "openapi": "3.0.0",
  "info": {
    "title": "Campaign Generation - Image Analysis API",
    "version": "1.0.0",
    "description": "API for analyzing marketing images and visual content for campaign generation"
  },
  "paths": {
    "/analyze-image": {
      "post": {
        "summary": "Analyze marketing image content",
        "description": "Analyzes uploaded images for visual elements, brand consistency, cultural sensitivity, and provides optimization recommendations",
        "operationId": "analyze_image",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "image_url": {
                    "type": "string",
                    "description": "URL or S3 path to the image to analyze"
                  },
                  "image_base64": {
                    "type": "string",
                    "description": "Base64 encoded image data"
                  },
                  "analysis_type": {
                    "type": "string",
                    "enum": ["full", "colors", "text", "brand", "cultural"],
                    "description": "Type of analysis to perform"
                  },
                  "target_market": {
                    "type": "string",
                    "description": "Target market for cultural sensitivity analysis"
                  }
                },
                "required": ["image_url"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Image analysis completed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"]
                    },
                    "analysis": {
                      "type": "object",
                      "properties": {
                        "image_type": {
                          "type": "string",
                          "description": "Detected type of marketing material"
                        },
                        "dominant_colors": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "description": "Dominant color palette in hex format"
                        },
                        "text_detected": {
                          "type": "boolean",
                          "description": "Whether text was detected in the image"
                        },
                        "brand_elements": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "description": "Detected brand elements"
                        },
                        "visual_style": {
                          "type": "string",
                          "description": "Identified visual style"
                        },
                        "target_audience": {
                          "type": "string",
                          "description": "Suggested target audience based on visual analysis"
                        },
                        "cultural_sensitivity_score": {
                          "type": "number",
                          "minimum": 0,
                          "maximum": 1,
                          "description": "Cultural sensitivity score (0-1)"
                        },
                        "recommendations": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "description": "Optimization recommendations"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
