{
  "openapi": "3.0.0",
  "info": {
    "title": "Image Analysis API",
    "version": "1.0.0",
    "description": "API for analyzing product images using computer vision"
  },
  "paths": {
    "/analyze": {
      "post": {
        "summary": "Analyze product image",
        "description": "Analyzes product images using Amazon Rekognition to extract product information, labels, and text",
        "operationId": "analyzeProductImage",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "bucket_name": {
                    "type": "string",
                    "description": "S3 bucket name containing the image"
                  },
                  "object_key": {
                    "type": "string",
                    "description": "S3 object key (path) of the image file"
                  }
                },
                "required": ["bucket_name", "object_key"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Image analysis completed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "image_hash": {
                      "type": "string",
                      "description": "Unique identifier for the analyzed image"
                    },
                    "analysis_summary": {
                      "type": "string",
                      "description": "Brief summary of the analysis results"
                    },
                    "product_categories": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "Detected product categories (e.g., Fashion, Electronics)"
                    },
                    "is_appropriate": {
                      "type": "boolean",
                      "description": "Whether the image content is appropriate (passed moderation)"
                    },
                    "labels_count": {
                      "type": "integer",
                      "description": "Number of labels detected in the image"
                    },
                    "text_count": {
                      "type": "integer",
                      "description": "Number of text elements detected in the image"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - missing required parameters"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}
