{
  "openapi": "3.0.0",
  "info": {
    "title": "Translation API",
    "version": "1.0.0",
    "description": "API for translating marketing content to different languages"
  },
  "paths": {
    "/translate": {
      "post": {
        "summary": "Translate content to target language",
        "description": "Translates marketing content while preserving brand voice and marketing effectiveness",
        "operationId": "translateContent",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": {
                    "type": "string",
                    "description": "The content to translate"
                  },
                  "target_language": {
                    "type": "string",
                    "description": "Target language (e.g., 'Spanish', 'French', 'Japanese', 'German')"
                  },
                  "content_type": {
                    "type": "string",
                    "enum": [
                      "text",
                      "social_media",
                      "email",
                      "web_ad",
                      "marketing_copy",
                      "product_description"
                    ],
                    "default": "text",
                    "description": "Type of content being translated"
                  },
                  "preserve_formatting": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to preserve original formatting and structure"
                  },
                  "brand_voice": {
                    "type": "string",
                    "description": "Brand voice and tone requirements (optional)"
                  }
                },
                "required": ["content", "target_language"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Translation completed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "translated_content": {
                      "type": "string",
                      "description": "The translated content"
                    },
                    "quality_score": {
                      "type": "number",
                      "minimum": 1,
                      "maximum": 10,
                      "description": "Translation quality score (1-10, higher is better)"
                    },
                    "translation_notes": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "Notes about the translation process or considerations"
                    },
                    "confidence_level": {
                      "type": "string",
                      "enum": ["low", "medium", "high"],
                      "description": "Confidence level in the translation accuracy"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
