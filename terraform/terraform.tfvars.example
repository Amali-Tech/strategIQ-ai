# Example Terraform Variables for Lokalize Multi-Agent System
# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "eu-west-1"  # Ensure Bedrock is available in this region

# Project Configuration
project_name = "lokalize"
environment  = "dev"

# Multi-Agent System Configuration
# The module will use these Claude models by default:
# - Supervisor Agent: Claude Sonnet (complex orchestration)
# - Campaign Generation Agent: Claude Sonnet (creative campaign development)
# - Cultural Analysis Agent: Claude Sonnet (nuanced cultural analysis)
# - Sentiment Analysis Agent: Claude Haiku (fast sentiment processing)

# Note: Ensure you have access to Claude models through the AWS Bedrock console
# You may need to request access to Claude models through the AWS Bedrock console

# AWS Profile (uncomment and set if using named profiles)
# aws_profile = "your-aws-profile"

# YouTube API Configuration
# youtube_api_key = "your-youtube-api-key-here"

# Bedrock Configuration
# bedrock_agent_inference_profile_arn = "arn:aws:bedrock:eu-west-1:123456789012:inference-profile/your-profile"
# bedrock_model_id = "anthropic.claude-3-sonnet-20240229-v1:0"

# S3 CORS Configuration
s3_allowed_origins = [
  "http://localhost:3000",
  "https://your-frontend-domain.com"
]
